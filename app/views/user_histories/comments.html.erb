<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Оставленные Комментарии</h5>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Комментарий</th>
            <th>Дата</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments_history.each do |comment, time|%>
            <tr>
              <td></td>
              <td><%= comment.body %></td>
              <td><%= utc(time) %></td>
              <td><%= link_to 'Открыть', article_path(comment.article), class: "btn btn-fill-out btn-small d-block" if comment.article.published? %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagination-area pt-30 text-center bt-1 border-color-1">
        <div class="container">
          <div class="row">
            <div class="col-xl-12">
              <div class="single-wrap d-flex justify-content-center">
                <nav aria-label="Page navigation example">
                  <%= will_paginate @comments_history, class: 'pagination justify-content-start' %>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
