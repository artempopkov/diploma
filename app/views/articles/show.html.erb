<div class="main_content sidebar_right pb-50 pt-50">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-12 col-sm-12">
        <div class="entry-header entry-header-1 mb-30">
          <div class="entry-meta meta-0 font-small mb-15">
            <a href="category.html"><span class="post-cat background1 color-white"><%= @article.category.name %></span></a>
          </div>
          <h1 class="post-title">
            <%= @article.title %>
          </h1>
          <div class="entry-meta meta-1 font-small color-grey mt-15 mb-15">
            <span class="post-by">By
              <%= link_to '#' do %>
                <%= @article.moderator.name %>
              <% end %>
            </span>
            <span class="post-on has-dot"><%= published_time(@article) %></span>
            <span class="hit-count"><i class="icon-bolt"></i><%= @article.impressions_count %> Views</span>
          </div>
          <div class="bt-1 border-color-1 mt-30 mb-30"></div>
          <div class="single-social-share clearfix ">
            <div class="entry-meta meta-1 font-small color-grey float-left mb-30">
              <span class="hit-count"><i class="icon-comment mr-5"></i><span id="comment-count1"><%= @article.comments.count %>
                  comments
                </span>
                <span class="hit-count"><%= like_heart(@article) %>
                  <span class='likes-amount'><%= @article.get_likes.size %> likes</span>
                </span>
                <span class="hit-count"><i class="icon-star mr-5"></i>8/10</span>
              </span>
            </div>
          </div>
        </div>
        <!--end entry header-->
        <% if @article.avatar.present? && !@article.avatar_disable %>
          <%= image_tag @article.avatar.url, class: 'mb-3' %>
          <div class="divider mb-3"></div>
        <% end %>
        <div class="entry-main-content">
          <%= @article.content %>
        </div>
        <div class="entry-bottom mt-50 mb-30">
          <div class="tags">
            <% @article.tags.each do |tag| %>
              <%= link_to tag.name, '' %>
            <% end %>
          </div>
        </div>
        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
        <!--related posts-->
        <div class="related-posts">
          <h3 class="mb-30">Related posts</h3>
          <div class="loop-list">
            <article class="row mb-30">
              <div class="col-md-4">
