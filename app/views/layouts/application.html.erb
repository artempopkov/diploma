<!DOCTYPE html>
<html>
  <head>
    <title>Ngnews</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% flash.each do |name, message| %>
      <div class="flash_message" style="display: none" flash-type="<%= flash_type(name) %>">
        <%= message %>
      </div>
    <% end %>
    <div class="scroll-progress primary-bg"></div>
    <!-- Preloader Start -->
    <div id="preloader-active">
      <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
          <div class="text-center">
            <div data-loader="spinner"></div>
            <p>Loading...</p>
          </div>
        </div>
      </div>
    </div>
    <div class="main-wrap">
      <!--Offcanvas sidebar-->
      <aside id="sidebar-wrapper" class="custom-scrollbar offcanvas-sidebar">
        <button class="off-canvas-close"><i class="icon-close"></i></button>
        <div class="sidebar-inner">
        </div>
      </aside>
      <!-- Main Wrap Start -->
      <header class="main-header header-style-1">
        <div class="top-bar pt-10 pb-10 background-white d-none d-md-block">
          <div class="container">
            <div class="row">
              <div class="col-6">
                <div class="language d-inline-block font-small">
                  <div id="langMenuDropdow" class="dropdown-menu dropdown-menu-left" aria-labelledby="langMenu">
                    <a class="dropdown-item" href="#">English</a>
                    <a class="dropdown-item" href="#">Русский</a>
                  </div>
                  <a class="dropdown-toggle" href="#" role="button" id="langMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="ti-world mr-5"></i>
                    <span>EN</span>
                  </a>
                </div>
                <div id="datetime" class="d-inline-block">
                  <ul>
                    <li><span class="font-small"><i class="ti-calendar mr-5"></i><%= Time.now.strftime("%A, %B %-d, %Y") %></span></li>
                  </ul>
                </div>
              </div>
              <div class="col-6 text-right">
                <div class="vline-space d-inline-block"></div>
                <div class="user-account d-inline-block font-small">
                  <a class="dropdown-toggle" href="#" role="button" id="userMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="icon-user"></i>
                    <span>Account</span>
                  </a>
                  <div id="userMenuDropdow" class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
                    <% if user_signed_in? %>
                      <%= link_to user_path(current_user), class: 'dropdown-item' do %>
                        <i class="icon-pencil-alt"></i>
                        My Account
                      <% end %>
                      <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
                        <i class="icon-stats-up"></i>
                        Your Dashboard
                      <% end %>
                      <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
                        <i class="icon-heart"></i>
                        Your Favorites
                      <% end %>
                      <div class="dropdown-divider"></div>
                      <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
                        <i class="icon-share"></i>
                        Logout
                      <% end %>
                    <% else %>
                      <%= link_to new_user_session_path, class: 'dropdown-item' do %>
                        <i class="icon-shift-right-alt"></i>
                        Sign in
                      <% end %>
                      <div class="dropdown-divider"></div>
                      <%= link_to new_user_registration_path, class: 'dropdown-item' do %>
                        <i class="icon-shift-right"></i>
                        Sign up
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
             
            </div>
          </div>
        </div>
        <!--End top bar-->
        <div class="header-logo background-white text-center pt-40 pb-40 d-none d-lg-block">
          <div class="container">
            <div class="row">
              <div class="col-12">
                <%= link_to root_path do %>
                  <%= image_tag 'logos/logo.png', class: 'logo-img d-inline' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <!--End logo-->
        <div class="header-bottom header-sticky background-white text-center">
          <div class="mobile_menu d-lg-none d-block"></div>
          <div class="container">
            <div class="row">
              <div class="col-12">
                <div class="logo-tablet d-md-inline d-lg-none d-none">
                  <a href="index.html">
                    <%= image_tag 'logos/logo-tablet.png', class: 'logo-img d-inline' %>
                  </a>
                </div>
                <div class="logo-mobile d-inline d-md-none">
                  <a href="index.html">
                    <%= image_tag 'logos/logo-mobile.png', class: 'logo-img d-inline' %>
                  </a>
                </div>
                <!-- Main-menu -->
                <div class="main-nav text-center d-none d-lg-block">
                  <nav>
                    <ul id="navigation" class="main-menu">
                      <li><a href="about.html">About</a></li>
                      <li class="menu-item-has-children">
                        <a href="category.html">Category</a>
                        <ul class="sub-menu">
                          <% Category.all.order(:id).each do |cat| %>
                            <li><%= link_to cat.name, '#' %></li>
                          <% end %>
                        </ul>
                      </li>
                      <li><a href="contact.html">Contact</a></li>
                    </ul>
                  </nav>
                </div>
                <!-- Search -->
                <div class="search-button h-69">
                  <button class="search-icon h-69"><i class="icon-search"></i></button>
                  <span class="search-close float-right font-small">CLOSE</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>
      <main class="position-relative">
        <!--Search Form-->
        <div class="main-search-form transition-02s">
          <div class="container">
            <div class="pt-10 pb-50 main-search-form-cover">
              <div class="row mb-20">
                <div class="col-12">
                  <%= search_form_for Article.published.ransack(params[:query]), url: search_articles_path, class: 'search-form position-relative',
                        html: { method: :post } do |f| %>
                    <div class="search-form-icon"><i class="icon-search"></i></div>
                    <label>
                      <%= f.text_field :title_or_description_cont, class:"search_field", id: 'title-search-input', placeholder: "Enter keywords for search..."  %>
                      <%= f.text_field :tags_name_cont, class:"search_field", id: 'tag-search-input', placeholder: "Enter keywords for search..." %>
                    </label>
                    <div class="search-switch">
                      <ul class="list-inline">
                        <li class="list-inline-item"><a class='cursor-pointer' id='title-search'>Title</a></li>
                        <li class="list-inline-item"><a class='cursor-pointer' id='tag-search'>Tag</a></li>
                      </ul>
                    </div>
                    <%= f.submit id: 'submit-search-button' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
      <%= yield %>
      <footer id='footer'>
        <div class="footer-bottom-area background11">
          <div class="container">
            <div class="footer-border pt-30 pb-30">
              <div class="row d-flex align-items-center justify-content-between">
                <div class="col-lg-6">
                  <div class="footer-copy-right">
                    <p class="font-medium">© 2021, NGNews | All rights reserved | Design by Artem Popkov</p>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="footer-menu float-lg-right mt-lg-0 mt-3">
                    <ul class="font-medium">
                      <li><a href="#">Terms of use</a></li>
                      <li><a href="#">Privacy Policy</a></li>
                      <li><a href="#">Contact</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Footer End-->
      </footer>
    </div>
    <!-- Main Wrap End-->
    <div class="dark-mark"></div>
  </body>
</html>
