<!DOCTYPE html>
<html>
<head>
  <title>NG Admin</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="nav-bg"></div>
  <div class="container">

    <nav class="navbar navbar-expand-lg navbar-light pt-1">
      <%= link_to 'NG Admin', admin_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to_moderators %>
          </li>
          <li class="nav-item">
            <%= link_to_users %>
          </li>
          <li class="nav-item">
            <%= link_to 'Articles', admin_articles_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to_categories %>
          </li>
        </ul>
        <%= link_to 'log out', destroy_moderator_session_path, method: :delete, class: 'btn-logout m-1' %>
      </div>
    </nav>

    <%= yield %>
  </div>
</body>
</html>
