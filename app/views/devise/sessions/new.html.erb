<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="main_content shop pb-100 mt-20 custom-mb-1">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap widget-taber-content p-30 background-white border-radius-5">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3 class="mb-30">Вход</h3>
                            </div>
                            <%= render "devise/shared/error_messages", resource: resource %>
                            <form method="post">
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Ваш Email' %>
                                </div>
                                <div class="form-group">
                                  <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Пароль' %>
                                </div>
                                <div class="login_footer form-group">
                                    <% if devise_mapping.rememberable? %>
                                        <div class="chek-form">
                                            <div class="custome-checkbox">
                                                <%= f.check_box :remember_me, class: 'form-check-input' %>
                                                <%= f.label :remember_me, class: 'form-check-label' do %>
                                                    <%= resource.class.human_attribute_name('remember_me') %>
                                                <% end %>
                                            </div>
                                        </div>
                                    <% end %>
                                    <%= link_to "Забыли пароль?", new_password_path(resource_name), class: 'text-muted' %>
                                </div>
                                <div class="form-group">
                                    <%= f.submit  'Войти', class: 'btn btn-fill-out btn-block' %>
                                </div>
                            </form>
                            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                                <%= link_to "Не получили письмо подтверждения?", new_user_confirmation_path(resource_name), class: 'text-muted' %>
                                <div class="divider-text-center mt-15 mb-25"></div>
                                <div class="text-muted text-center">
                                    Нет аккаунта? <%= link_to "Зарегистрироваться", new_registration_path(resource_name) %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
