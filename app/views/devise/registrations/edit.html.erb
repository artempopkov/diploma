<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="card-body">
    <div class="row">
     <div class="form-group col-md-6">
        <label>Имя<span class="required">*</span></label>
        <%= f.text_field :name, autofocus: true, class: "form-control #{field_validity_css_class(resource, :name)}" %>
        <%= catched_errors(resource, :name) %>
      </div>
      <div class="form-group col-md-6">
        <label>Электронная почта<span class="required">*</span></label>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: "form-control #{field_validity_css_class(resource, :email)}" %>
        <%= catched_errors(resource, :email) %>
      </div>
      <div class="col-md-12">
        <%= f.submit 'Сохранить', class: 'btn btn-fill-out' %>
        <%= link_to 'Отменить мой аккаунт', registration_path(resource_name), data: { confirm: 'Вы уверены?' }, method: :delete, class: 'float-right btn btn-fill-out' %>
      </div>
    </div>
  </div>
<% end %>
