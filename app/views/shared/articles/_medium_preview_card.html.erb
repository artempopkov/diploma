<article class="row mb-50">
  <div class="col-md-6">
    <div class="post-thumb position-relative image-hover-scale mb-1">
      <div class="scale img-hover-slide border-radius-5 position-relative">
        <%= link_to article_avatar_big_preview(article), article, class: 'img-link'%>
      </div>
    </div>
  </div>
  <div class="col-md-6 align-center-vertical">
    <div class="post-content">
      <div class="entry-meta meta-0 font-small mb-15">
        <span class="post-cat background1 color-white">
          <%= link_to article.category.name, search_articles_path(query: {category_id_eq: article.category.id}), class: 'color-white' %>
        </span>
      </div>
      <h5 class="post-title">
        <%= link_to article.title, article %>
      </h5>
      <div class="entry-meta meta-1 font-small color-grey mt-15 mb-15">
        <span class="post-on"><i class="ti-marker-alt"></i><%= published_time_label(article) %></span>
        <span class="hit-count"><i class="ti-bolt"></i><%= article.impressions_count %> Views</span>
      </div>
      <p> <%= article.description %></p>
    </div>
  </div>
</article>
