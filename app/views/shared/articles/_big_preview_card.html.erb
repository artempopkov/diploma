<article class="first-post mb-50 animate-conner">
  <div class="post-thumb d-flex mb-30 border-radius-5 img-hover-scale animate-conner-box">
    <%= link_to article_avatar_preview(article), article %>
  </div>
  <div class="post-content">
    <div class="entry-meta meta-0 font-small mb-15">
      <span class="post-cat background1 color-white">
        <%= link_to article.category.name, search_articles_path(query: {category_id_eq: article.category.id}), class: 'color-white' %>
      </span>
    </div>
    <h3 class="post-title">
      <%= link_to article.title, article %>
    </h3>
    <div class="entry-meta meta-1 font-small color-grey mt-15 mb-15">
      <span class="post-by">By
        <%= article.moderator.name %>
      </span>
      <span class="post-on has-dot"><%= published_time_label(article) %></span>
    </div>
    <div class="post-excerpt mb-25">
      <p><%= article.description %></p>
    </div>
  </div>
</article>
