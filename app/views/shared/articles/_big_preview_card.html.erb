<article class="first-post mb-50 animate-conner">
  <div class="post-thumb d-flex mb-30 border-radius-5 img-hover-scale animate-conner-box">
    <%= link_to article do %>
      <% if article.avatar.present? %>
        <img src="<%= article.avatar.url %>" alt="...">
      <% else %>
        <img src="<%= asset_path('no-image.png') %>" alt="...">
      <% end %>
    <% end %>
  </div>
  <div class="post-content">
    <div class="entry-meta meta-0 font-small mb-15">
      <%= link_to '#' do %>
        <span class="post-cat background1 color-white"><%= article.category.name %></span>
      <% end %>
    </div>
    <h3 class="post-title">
      <%= link_to article.title, article %>
    </h3>
    <div class="entry-meta meta-1 font-small color-grey mt-15 mb-15">
      <span class="post-by">By
        <%= link_to '#' do %>
          <%= article.moderator.name %>
        <% end %>
      </span>
      <span class="post-on has-dot"><%= published_time(article) %></span>
    </div>
    <div class="post-excerpt mb-25">
      <p><%= article.description %></p>
    </div>
  </div>
</article>
