<%= form_with(model: [@article, @article.comments.build] ) do |form| %>
  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <%= form.text_area :body, class: "form-control w-100", id: "comment", cols: "30", rows: "9", placeholder: "Write Comment" %>
      </div>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.hidden_field :article_id %>
    </div>
  </div>
  <div class="form-group">
    <%= form.submit 'Post Comment', class: 'button button-contactForm' %>
  </div>
<% end %>
