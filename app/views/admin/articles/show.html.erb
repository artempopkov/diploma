<p id="notice"><%= notice %></p>
<div class="main_content sidebar_right pb-50 pt-50">
  <div class="container">
    <div class="mb-10">
      <%= link_to 'Back', admin_articles_path, class: 'btn-secondary btn-back' %>
      <% if @article.inactive? %>
        <%= link_to 'Edit', edit_admin_article_path(@article), class: 'btn btn-edit' %>
        <%= link_to 'Send for review', admin_send_for_review_path(@article), method: :patch, class: 'btn btn-confirm' %>
      <% end %>
    </div>
    <div class="divider-text-center mt-10 mb-30">
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-12 col-sm-12">
        <div class="entry-header entry-header-1 mb-30">
          <div class="entry-meta meta-0 font-small mb-15">
            <span class="post-cat background2 color-white">
              <%= link_to @article.category.name, admin_articles_url(cat: @article.category), class: 'color-white' %>
            </span>
          </div>
          <h1 class="post-title">
            <%= @article.title %>
          </h1>
          <div class="entry-meta meta-1 font-small color-grey mt-15 mb-15">
                <span class="post-on has-dot"><%= article_creation_time(@article) %>
                  status: <%= @article.status %></span>
          </div>
        </div>
        <% if @article.avatar.present? && !@article.avatar_disable %>
          <%= image_tag @article.avatar.url, class: 'mb-3' %>
          <div class="divider mb-3"></div>
        <% end %>
        <%= @article.content %>
        <div class="entry-bottom mt-50 mb-30">
          <div class="tags">
            <% @article.tags.each do |tag| %>
              <%= link_to tag, admin_articles_url(tag: tag.name) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="divider-text-center mt-15 mb-30">
    </div>
    <%= link_to 'Destroy', [:admin, @article], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %>
  </div>
</div>
