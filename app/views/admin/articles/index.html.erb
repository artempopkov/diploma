<p id="notice"><%= notice %></p>
<div class="archive-header text-center">
  <div class="container">
    <h2><%= link_to 'Articles', admin_articles_url, class: 'color2' %></h2>
    <% Category.order(:id).each do |cat| %>
      <%= link_to cat.name, admin_articles_url(cat: cat) %> |
    <% end %>
    <div class="bt-1 border-color-1 mt-30 mb-50"></div>
    <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
      <%= link_to tag.name, admin_articles_url(tag: tag.name), :class => css_class %> |
    <% end %>
    <div class="bt-1 border-color-1 mt-30 mb-50"></div>
  </div>
</div>
<div class="main_content sidebar_right pb-50">
  <div class="container">
    <%= link_to 'New Article', new_admin_article_path, class: 'btn btn-create' %>
    <div class="row row-cols-1 row-cols-md-3">
      <% @articles.each do |article| %>
        <div class="col mb-4">
          <div class="card h-100">
            <% if article.avatar.present? %>
              <img src="<%= article.avatar.index_admin.url %>" class="card-img-top img-size" alt="...">
            <% else %>
              <img src="<%= asset_path('no-image.png') %>" class="card-img-top img-size" alt="...">
            <% end %>

            <%= link_to '', [:admin, article], class: 'img-link' %>
            <div class="card-body">
              <a href="#"><span>Category: <%= article.category.name %></span></a>
              <p class="post-on has-dot">Status: <%= article.status %></p>

              <div class="bt-1 border-color-1 mb-1"></div>
              <h5 class="card-title"><%= link_to article.title, [:admin, article] %></h5>
              <p class="card-text"><%= article.description %></p>
              <!--              <p class="card-text"><small class="text-muted"><%#= article_creation_time(article) %></small></p>-->
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
