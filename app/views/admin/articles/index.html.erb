<p id="notice"><%= notice %></p>
<div class="archive-header text-center">
  <div class="container">
    <h2><%= link_to 'Articles', admin_articles_url, class: 'color2' %></h2>
  </div>
</div>
<div class="container search-form mb-4">
<%= search_form_for [:admin, @query] do |f| %>

  <%= f.label :title_or_description_cont %>
  <div class="input-group mb-2">
    <%= f.search_field :title_or_description_cont, class: 'form-control'%>
  </div>

  <%= f.label :category_id_eq%>
  <div class="input-group mb-2">
    <%= f.select(:category_id_eq, @categories.pluck(:name, :id), { include_blank: true }, {class: "form-control" }) %>
  </div>

  <%= f.label :tag_name_eq%>
  <div class="input-group mb-2">
    <%= f.select :tags_name_in, @tags, {include_blank: true} , class: "form-control" %>
    <%# form.collection_select :vendor_id_eq, Vendor.all, :id, :name, include_blank: true %>
  </div>
  
  <div class="form-group">
    <div class="float-right">
      <%= link_to "Clear", request.path, class: 'clear' %>
      <%= f.submit class: 'search' %>
    </div>
  </div>
<% end %>
</div>

<div class="main_content sidebar_right pb-50">
  <div class="container">
    <%= link_to 'New Article', new_admin_article_path, class: 'btn btn-create' %>
    <div class="row row-cols-1 row-cols-md-3">
      <% @articles.each do |article| %>
        <div class="col mb-4">
          <div class="card h-100">
            <%= article_avatar_small_preview(article) %>
            <%= link_to '', [:admin, article], class: 'img-link' %>
            <div class="card-body">
              <a href="#"><span>Category: <%= article.category.name %></span></a>
              <div class="bt-1 border-color-1 mb-1"></div>
              <h5 class="card-title"><%= link_to article.title, [:admin, article] %></h5>
              <p class="card-text"><%= article.description %></p>
              <!--              <p class="card-text"><small class="text-muted"><%#= article_creation_time(article) %></small></p>-->
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
