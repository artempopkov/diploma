<p id="notice"><%= notice %></p>

<div>
  <div class="row" >
    <div class="col">
      <div class="d-flex justify-content-start"><h1>Users (<%= @users.count %>)</h1></div>
    </div>
    <div class="col">
      <div class="d-flex justify-content-end"><%= link_to 'New', new_admin_user_path, method: :get, class: "btn-ok" %></div>
    </div>
  </div>
</div>

<table class="table table-ligth table-striped table-hover mt-2">
  <thead>
  <tr class="d-flex">
    <th class="col-1"></th>
    <th class="col-1">ID</th>
    <th class="col-5">Email</th>
    <th class="col-4">Name</th>
    <th class="col"></th>
  </tr>
  </thead>

  <tbody class="w-100">
  <% @users.each do |user| %>
    <tr class="d-flex">
      <td class="col-1"><%= link_to 'Edit', edit_admin_user_path(user), class: 'text-decoration-none'%></td>
      <th class="col-1"><%= user.id %></th>
      <td class="col-5"><%= user.email %></td>
      <td class="col-4"><%= user.name %></td>
      <td class="col"><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @users %>
