<p id="notice"><%= notice %></p>

<div>
  <div class="row" >
    <div class="col">
      <div class="d-flex justify-content-start"><h1>Users</h1></div>
    </div>
    <div class="col">
      <div class="d-flex justify-content-end pt-3"><%= link_to 'New user', new_admin_user_path, method: :get, class: "btn btn-primary" %></div>
    </div>
  </div>
</div>

<table class="table table-ligth table-striped table-hover w-100">
  <thead>
  <tr class="d-flex">
    <th class="col-1"></th>
    <th class="col-3">Email</th>
    <th class="col-7">Name</th>
    <th class="col-1"></th>
  </tr>
  </thead>

  <tbody class="w-100">
  <% @users.each_with_index do |user, inx| %>
    <tr class="d-flex">
      <th scope="row"><%= inx + 1 %></th>
      <td class="col-1"><%= link_to 'Edit', edit_admin_user_path(user), class: 'text-decoration-none'%></td>
      <td class="col-3"><%= user.email %></td>
      <td class="col-6"><%= user.name %></td>
      <td class="col-1"><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
