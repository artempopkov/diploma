<p id="notice"><%= notice %></p>

<div>
  <div class="row" >
    <div class="col">
      <div class="d-flex justify-content-start"><h1>Categories (<%= @categories.count %>)</h1></div>
    </div>
    <div class="col">
      <div class="d-flex justify-content-end pt-2"><%= link_to 'New', new_admin_category_path, method: :get, class: "btn-ok" %></div>
    </div>
  </div>
</div>

<table class="table table-ligth table-striped table-hover w-100">
  <thead>
  <tr class="d-flex">
    <th class="col-1"></th>
    <th class="col-1">ID</th>
    <th class="col-4">Name</th>
    <th class="col"></th>
  </tr>
  </thead>

  <tbody class="w-100">
  <% @categories.each do |category| %>
    <tr class="d-flex">
      <td class="col-1"><%= link_to 'Edit', edit_admin_category_path(category), class: 'text-decoration-none'%></td>
      <th class="col-1"><%= category.id %></th>
      <td class="col-4"><%= category.name %></td>
      <td class="col"><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-decoration-none' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @users %>
