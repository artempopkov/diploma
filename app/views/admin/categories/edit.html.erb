<h1>Edit Category</h1>
<div class="form-container">
  <%= form_with(model: [:admin, @category], html: { class: 'w-50' }) do |form| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@category.errors.count, "error") %> prohibited this @category from being saved:</h2>

        <ul>
          <% @category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.label :name %>
    <div class="input-group">
      <%= form.text_field :name, class: "form-control mb-3" %>
    </div>

    <div>
      <%= form.submit 'OK', class: 'btn btn-primary w-25 mr-3' %>
      <%= link_to 'Cancel', admin_categories_path, class: 'btn btn-secondary w-25' %>
    </div>
  <% end %>
</div>
